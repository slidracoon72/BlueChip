<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUTURE SCOPE"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textSize="40dp"
        android:textColor="#4689C8"
        android:textStyle="bold" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/future"
                android:padding="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/c2"
                android:textSize="40px"
                />

    <ImageView
        android:id="@+id/fah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|clip_horizontal|center|clip_vertical|center_horizontal|center_vertical"
        android:scaleType="fitEnd"
        android:src="@drawable/futureahead" />

</LinearLayout>